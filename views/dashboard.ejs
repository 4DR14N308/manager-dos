<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Contraseñas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            transition: background-color 0.3s, color 0.3s;
        }
        .table th, .table td {
            white-space: nowrap;
        }
        .dark-mode {
            background-color: #212529;
            color: white;
        }
        .dark-mode .table {
            background-color: #343a40;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Gestor de Contraseñas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addPassword">Añadir Contraseña</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Cerrar sesión</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-light" onclick="toggleDarkMode()">Modo Oscuro</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Contraseñas Guardadas</h1>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Usuario</th>
                            <th>URL</th>
                            <th>Contraseña</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% passwords.forEach(function(password) { %>
                            <tr>
                                <td><%= password.title %></td>
                                <td><%= password.username %></td>
                                <td><%= password.url %></td>
                                <td>
                                    <span id="password-<%= password.id %>" class="password-text">
                                        ********
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-info" onclick="togglePassword('<%= password.id %>')">Ver Contraseña</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
        }

        function togglePassword(id) {
            const passwordField = document.getElementById(`password-${id}`);
            if (passwordField.textContent === "********") {
                // Desencriptar la contraseña (esto es solo un ejemplo, reemplázalo con un método real)
                passwordField.textContent = "contraseña_cifrada"; // Cambiar por la contraseña real
            } else {
                passwordField.textContent = "********"; // Volver a ocultarla
            }
        }
    </script>
</body>
</html>
